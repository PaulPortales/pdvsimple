<?xml version = "1.0" encoding = "ISO-8859-1"?><!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd"><aplicacion nombre="PDVSimple"> 		<!--	Un m�dulo por defecto se asume para cada	controlador en <modulo-defecto/> 	-->	<modulo-defecto>		  		<controlador nombre="PDVSimple"/>			</modulo-defecto>		<modulo nombre="ZafaconFactura">		<!-- la accion a mostrar en cada fila -->		<var-entorno nombre="XAVA_LIST_ACTION" valor="Zafacon.restaurar"/>		<modelo nombre="Factura"/>		<!-- para mostrar solo las entidades borradas -->		<tab nombre="Eliminado"/>		<!-- con solo una accion: restaurar -->		<controlador nombre="Zafacon"/>		<!-- modo lista solamente -->		<controlador-modo nombre="ListOnly"/>	</modulo>		<modulo nombre="ZafaconOrden">		<var-entorno nombre="XAVA_LIST_ACTION" valor="Zafacon.restaurar"/>		<modelo nombre="Orden"/>		<tab nombre="Eliminado"/>		<controlador nombre="Zafacon"/>		<controlador-modo nombre="ListOnly"/>	</modulo>		<!-- 11.3.2 - 211 modulo de solo detalle -->	<modulo nombre="EditarFacturaActual">		<modelo nombre="Factura"/>		<controlador nombre="EditarFacturaActual"/>		<!-- asi el modulo tiene solo modo de detalle -->		<controlador-modo nombre="Void"/>	</modulo>		<!-- 13.2 - 269 Modulo de solo lectura para Factura -->	<modulo nombre="ConsultarFactura">		<!-- Usando esta accion de busqueda los datos no son editables en el detalle -->		<var-entorno nombre="XAVA_SEARCH_ACTION"			valor="CRUD.searchReadOnly"/>					<modelo nombre="Factura"/>		<!-- Solo estan disponibles las accione de imprimir, CRUD no se incluye -->		<controlador nombre="Print"/>	</modulo>		<!-- 13.4 - 271 Modulo para que un cliente solo pueda ver sus propias ordenes -->	<modulo nombre="OrdenesCliente">		<var-entorno nombre="XAVA_SEARCH_ACTION" valor="CRUD.searchReadOnly"/>		<modelo nombre="Orden"/>		<!-- Usa el tab definido para este modulo>		<tab nombre="ClienteActual"/ -->		<controlador nombre="OrdenesCliente"/>		<controlador nombre="Print"/>	</modulo>		<!--	Podemos definir m�dulos adicionales, por ejemplo: 		<modulo nombre="ProfesorSoloLectura">		<modelo nombre="Profesor"/>		<controlador nombre="Print"/>	</modulo>			-->	  		</aplicacion>