<?xml version = "1.0" encoding = "ISO-8859-1"?><!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd"><aplicacion nombre="PDVSimple"> 		<!--	Un m�dulo por defecto se asume para cada	controlador en <modulo-defecto/> 	-->	<modulo-defecto>		  		<controlador nombre="PDVSimple"/>			</modulo-defecto>		<modulo nombre="ZafaconFactura">		<!-- la accion a mostrar en cada fila -->		<var-entorno nombre="XAVA_LIST_ACTION" valor="Zafacon.restaurar"/>		<modelo nombre="Factura"/>		<!-- para mostrar solo las entidades borradas -->		<tab nombre="Eliminado"/>		<!-- con solo una accion: restaurar -->		<controlador nombre="Zafacon"/>		<!-- modo lista solamente -->		<controlador-modo nombre="ListOnly"/>	</modulo>		<modulo nombre="ZafaconOrden">		<var-entorno nombre="XAVA_LIST_ACTION" valor="Zafacon.restaurar"/>		<modelo nombre="Orden"/>		<tab nombre="Eliminado"/>		<controlador nombre="Zafacon"/>		<controlador-modo nombre="ListOnly"/>	</modulo>		<!--	Podemos definir m�dulos adicionales, por ejemplo: 		<modulo nombre="ProfesorSoloLectura">		<modelo nombre="Profesor"/>		<controlador nombre="Print"/>	</modulo>			-->	  		</aplicacion>